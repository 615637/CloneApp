<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FontSize8">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="NaviBar">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">#B5B5B5</item>
        <item name="itemTextColor">#B5B5B5</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@drawable/btm_tint_selector</item>
        <item name="android:drawableTint">@drawable/btm_tint_selector</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
    </style>

    <style name="FontGray">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#747378</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="FontTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="MainBoxLayout">
        <item name="android:padding">25dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/background_mainbox</item>
    </style>


</resources>


