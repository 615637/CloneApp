<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="80dp">

                <TextView
                    android:id="@+id/tv_studio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Studio"
                    android:textSize="30dp"
                    style="@style/FontTitle"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/tv_studio_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Practice publicy for fun or to get feedback."
                    android:textColor="#76787E"
                    android:textSize="18sp"
                    android:letterSpacing="0.01"
                    android:lineSpacingExtra="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:paddingBottom="10dp"
                    android:text="Description"
                    style="@style/FontTitle"
                    android:textColor="@color/white"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="What are you focusing on today?"
                    android:textColorHint="#76787E"
                    android:background="@drawable/background_desc"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="40dp"
                    android:paddingBottom="10dp"
                    android:text="Playlist"
                    style="@style/FontTitle"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_add_box"
                    android:drawablePadding="10dp"
                    android:gravity="center"
                    android:text="Add a piece or technoque"
                    android:textColor="@color/white"/>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_alignParentLeft="true"
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_back"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/btn_unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_lock_open"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/btn_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_lock"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/btn_connect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/btn_contact"
                android:layout_toLeftOf="@+id/btn_lock"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                android:layout_marginRight="15dp"
                android:tint="#75747A"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_main_btn_add"
            android:text="Start now"
            android:textSize="18sp"
            android:textFontWeight="700"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"/>

    </RelativeLayout>



</LinearLayout>