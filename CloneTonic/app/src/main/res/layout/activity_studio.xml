<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".practice.StudioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/FontTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:paddingBottom="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Practice publicy for fun or to get feedback."
                    android:textColor="#76787E"/>

                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    style="@style/FontTitle"
                    android:textColor="@color/white"
                    android:paddingBottom="15dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="What are you focusing on today?"
                    android:textColorHint="#76787E"
                    android:background="@drawable/background_desc"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_marginTop="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Playlist"
                    style="@style/FontTitle"
                    android:textColor="@color/white"
                    android:paddingBottom="10dp"/>

                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_add_box"
                    android:drawablePadding="10dp"
                    android:text="Add a piece or technoque"
                    android:textColor="@color/white"/>



            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="bottom"
            android:padding="10dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_back" />

            <ImageView
                android:id="@+id/btn_connect"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:tint="#75747A"
                android:layout_toLeftOf="@+id/btn_lock"
                android:padding="2dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/btn_contact" />

            <ImageView
                android:id="@+id/btn_unlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:scaleX="-1"
                android:src="@drawable/btn_lock_open" />

            <ImageView
                android:id="@+id/btn_lock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/btn_lock" />


        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>