<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".start.StartActivity"
    android:background="@drawable/background_start"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="120dp"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/getstart"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="70dp">

        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:src="@drawable/startlogo"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The new way to practice."
            android:textColor="@color/white"
            android:textSize="15sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/btn_getstart"
            style="@style/FontTitle"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Get started"
            android:background="@drawable/background_main_comment"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/btn_login"
            style="@style/FontTitle"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Log in"
            android:textColor="@color/white"
            android:background="@drawable/background_btn00"/>
    </LinearLayout>

</LinearLayout>